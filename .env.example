GIT_BASE_URL=https://api.github.com
GIT_TOKEN=ghp_xxx                          # webhook falls back to GITHUB_TOKEN if set

SONAR_BASE_URL=https://sonarcloud.io/api
SONAR_TOKEN=sonar_xxx
SONAR_ORGANIZATION=your_org_key
SONAR_PROJECT_KEY=your_org:your_project

JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_USER_EMAIL=user@example.com
JIRA_API_TOKEN=jira_token_xxx   

RAG_EMBEDDINGS_MODEL=sentence-transformers/all-MiniLM-L6-v2
DATA_DIR=.data

export GITHUB_WEBHOOK_SECRET="some-long-random-string"   # same string in GitHub webhook
export GITHUB_TOKEN="ghp_..."                            # PAT to post PR comments
export AGENT_API_URL="http://127.0.0.1:8000/agents/run"  # your agent endpoint
export AGENT_API_KEY="super-secret-agent-key"            # used to protect /agents/run
export AGENT_API_TIMEOUT=30                              # seconds to wait on the agent call from webhook
export CODEPULSE_TARGET_BRANCH="fix_code_quality_issues"  # branch to create PR against
export CODEPULSE_POST_PR_SUMMARY=true                    # post agent summary back to the PR as a comment (default on)
export CODEPULSE_FORCE_PUSH=false                        # allow the agent to force-push when non-fast-forward errors occur
export CODEPULSE_CLEAN_BRANCH_BEFORE_FIX=true            # reset/clean the working tree before applying fixes
export CODEPULSE_BRANCH_PREFIX="fix_code_quality_issues"  # branch name prefix for generated fix branches (auto-increments)
